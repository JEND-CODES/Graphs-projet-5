{% extends 'base.html.twig' %}

{% block title %}Symfony Articles{% endblock %}

{% block body %}

{% if articles %}

<!--Vuetify Slideshow-->

        <v-carousel cycle height="400" hide-delimiter-background show-arrows-on-hover>
            <v-carousel-item v-for="(slide, i) in slides" :key="i">
                <v-sheet :color="colors[i]" height="100%">
                    <v-row class="fill-height" align="center" justify="center">
                        <div class="display-1"> [+[ slide ]+] Slide</div>
                    </v-row>
                </v-sheet>
            </v-carousel-item>
        </v-carousel>
 

 <!-- Tests liés au tuto grafikart partie 2/16 "Vue.JS découverte" 
 
  * Tests des attributs spéciaux : v-if / v-else / v-show / v-for
  
  
  -->
   
   <br />
   
    <div>
      <v-alert type="success">
       
        <h2>Bienvenue sur la page d'accueil !</h2>
        <h4>{{ mytitle }}</h4>
        
        <br />
        
        [+[ info ]+]
        <br />
        
        <a :href="link" target="_blank">[+[ link ]+]</a>
        
      </v-alert>
  
      <v-alert type="info" class="successful" v-if="successful">
        [+[ info2 ]+]
        <i class="far fa-window-close" @click="close"></i>
      </v-alert>
  
      <v-alert type="warning" v-else>
        [+[ info3 ]+]
        <i class="far fa-window-close" @click="open"></i>
      </v-alert>
  
      <v-alert type="error">
        [+[ info4 ]+]
        <br />
        <ul>
            <li v-for="person in persons">[+[ person ]+]</li>
        </ul>
        
      </v-alert>
      
    </div>



<!--Vuetify Cards-->

<div>
    

        {% for article in articles %}
        <v-card max-width="344" class="mx-auto">

            <v-list-item>
                <v-list-item-avatar color="grey"></v-list-item-avatar>
                <v-list-item-content>
                    <v-list-item-title class="headline">{{ article.title }}</v-list-item-title>
                    <v-list-item-subtitle class="subtitle-1">par Planetcode.fr</v-list-item-subtitle>
                </v-list-item-content>
            </v-list-item>

            <v-img src="https://cdn.vuetifyjs.com/images/cards/mountain.jpg" height="194"></v-img>

            <v-card-text class="title">
                {{ article.body | striptags | slice(0,100) }}...
            </v-card-text>

            <v-card-actions>

                <v-btn large text color="primary" href="{{ path('article_show', {'id': article.id}) }}">Lire</v-btn>

                <v-btn text color="deep-purple accent-4">
                    Read
                </v-btn>
                
                <div class="flex-grow-1"></div>
                <v-btn icon>
                    <v-icon>mdi-heart</v-icon>
                </v-btn>
                <v-btn icon>
                    <v-icon>mdi-share-variant</v-icon>
                </v-btn>
            </v-card-actions>
        </v-card>
        <br />
        {% endfor %}

   
</div>






{% else %}

<p>Aucun article pour l'instant !</p>

{% endif %}







{% endblock %}



