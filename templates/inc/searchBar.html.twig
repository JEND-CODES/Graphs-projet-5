<!-- Bouton PopUp search Bar -->

<v-btn fab elevation="0" color="rgba(255,255,255,0)" fixed @click="dialog2 = !dialog2" class="btn-magnify white--text" alt="Rechercher" title="Rechercher">
    <v-icon>fas fa-search</v-icon>
</v-btn>

<!-- PopUp Search Form -->

<v-dialog v-model="dialog2" max-width="500px">
    
    <v-card class="pa-2" color="rgba(255,255,255,0.85)">
        <v-card-text class="mt-4">

            <form method="GET" action="{{ path('quest') }}">
                <input type="search" name="q" placeholder="Rechercher..." />
                <input type="submit" value="Valider" />
            </form>

        </v-card-text>

    </v-card>
</v-dialog>
