    $( "#tab-graph-0" ).hide();
    $( "#tab-graph-1" ).hide();
    $( "#tab-graph-2" ).hide();
    $( "#tab-graph-3" ).fadeIn(500);
    $( "#tab-graph-4" ).hide();
    
});
    
$( "#onglet-tab-4" ).click(function() {

    $( "#tab-graph-0" ).hide();
    $( "#tab-graph-1" ).hide();
    $( "#tab-graph-2" ).hide();
    $( "#tab-graph-3" ).hide();
    $( "#tab-graph-4" ).fadeIn(500);
    
});

</script>

