    $( "#tab-graph-0" ).fadeIn(500);
    $( "#tab-graph-1" ).hide();
    $( "#tab-graph-2" ).hide();
    $( "#tab-graph-3" ).hide();
    $( "#tab-graph-4" ).hide();
    
});
    
